---
kind: ReplicationController
apiVersion: v1
metadata:
  name: demo
  labels:
    app: demo
spec:
  replicas: 3
  selector:
    app: demo
  template:
    metadata:
      labels:
        app: demo
    spec:
      containers:
      - name: demo
        image: SERVICE_URL:SERVICE_PORT/APP_NAME:JOB_NUMBER
        ports:
        - name: http-server
          containerPort: CONT_PORT
        livenessProbe:
          exec:
            command:
              - sh
              - -c
              - liveness.sh
          initialDelaySeconds: 20
          periodSeconds: 10
      imagePullSecrets:
        - name: regcred
